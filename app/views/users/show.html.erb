<h1>User Info</h1>.
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
        <% if logged_in? %>
          <% if @user.id == current_user.id %>
           <%= link_to "Edit", edit_user_path(@user) %>
           <%= link_to "Delete", user_path(@user), method: :delete %>
          <% end  %>
        <% end  %>
      </h1>
    </section>
  </aside>
</div>
