<h1>Log in</h1>

    <%= form_for(:user, url: login_path) do |f| %>
<br>
      <%= f.label :email %>
      <%= f.email_field :email %>
<br>
      <%= f.label :password %>
      <%= f.password_field :password %>
<br>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
