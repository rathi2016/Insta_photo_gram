<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(:user, url: login_path) do |f| %>
<br>
      <%= f.label :email %>
      <%= f.email_field :email %>
<br>
      <%= f.label :password %>
      <%= f.password_field :password %>
<br>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
  
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
