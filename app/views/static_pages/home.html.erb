<% provide(:title, "Home") %>
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= yield(:title) %> | Ruby on Rails</title>
  </head>
  <body>
     <h1> Welcome To Insta_pho_gram </h1>

     <li>
         <% if current_user %>
         <li><%= link_to 'Log out', session_path(current_user),method: :delete, data: { confirm: 'Are you sure?' } %></li>
         <li> <%= link_to "Posts",posts_path %></li>
         <%else %>
         <%= link_to "Sign up now!" , signup_path %>
         or <%= link_to "Sign in", login_path %>
         <% end %>
     </li>


  </body>
</html>
